{
    "name": "netflie/whatsapp-cloud-api",
    "description": "The first PHP API to send and receive messages using a cloud-hosted version of the WhatsApp Business Platform",
    "type": "libray",
    "authors": [
        {
            "name": "Álex Albarca",
            "email": "alex@albarca.es"
        },
        {
            "name": "Álex Albarca",
            "email": "alex@netflie.es"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "symfony/var-dumper": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Netflie\\WhatsAppCloudApi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Netflie\\WhatsAppCloudApi\\Tests\\": "tests"
        }
    },
    "scripts": {
        "unit-test": "vendor/bin/phpunit --group unit",
        "integration-test": "vendor/bin/phpunit --group integration"
    }
}
